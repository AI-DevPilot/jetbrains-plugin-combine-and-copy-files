<idea-plugin>
    <id>com.george.gale.CombineAndCopyFiles</id>
    <name>Combine and Copy Files</name>
    <version>1.0.0</version>
    <vendor email="gmale@icloud.com" url="https://github.com/gmgale/">George Gale</vendor>
    <description>
         Merge files and copy the result to clipboard, with each file's content separated by its filename. Ideal for providing better context to LLMs such as ChatGPT.
    </description>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="CombineFilesAction" class="com.george.gale.CombineFilesAction" text="Combine and Copy Files">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>

    <product-descriptor
            code="PAAAA"
            release-date="20240624"
            release-version="10"
            optional="true" />
</idea-plugin>
