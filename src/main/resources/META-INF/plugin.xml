<idea-plugin>
    <id>com.george.gale.CombineAndCopyFiles</id>
    <name>Combine and Copy Files</name>
    <version>1.0</version>
    <vendor email="gmale@icloud.com" url="https://github.com/gmgale/">George Gale</vendor>
    <description>
        This plugin enables you to merge the contents of multiple selected files into a single file, with each file's content separated by its filename and copy it to the clipboard.
    </description>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="CombineFilesAction" class="com.george.gale.CombineFilesAction" text="Combine and Copy Files">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>

    <product-descriptor
            code="combineCopyFile"
            release-date="20240624"
            release-version="1"
            optional="true" />
</idea-plugin>
